{
  "name": "Power Optimizer",
  "version": "1.0.0",
  "slug": "ha_power_optimization",
  "description": "Smart switching between DC and AC fridge based on battery SOC and solar production.",
  "startup": "application",
  "boot": "auto",
  "options": {
    "HA_TOKEN": "REPLACE_ME_WITH_YOUR_LONG_LIVED_ACCESS_TOKEN",
    "solar_device_class": "power",
    "soc_device_class": "battery"
  },
  "schema": {
    "HA_TOKEN": "str",
    "solar_device_class": {
      "type": "select",
      "options": [
        "power",
        "energy",
        "voltage",
        "current"
      ],
      "default": "power",
      "description": "Select the device class for solar sensor"
    },
    "soc_device_class": {
      "type": "select",
      "options": [
        "battery",
        "voltage",
        "current",
        "temperature"
      ],
      "default": "battery",
      "description": "Select the device class for battery SOC sensor"
    }
  },
  "arch": ["amd64", "aarch64", "armv7"],
  "host_network": true
}
